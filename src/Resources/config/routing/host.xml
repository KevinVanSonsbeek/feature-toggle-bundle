<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        https://symfony.com/schema/routing/routing-1.0.xsd">
    <route id="nusje2000_feature_toggle_api_host_environment_list" path="/" methods="GET,HEAD">
        <default key="_controller">nusje2000_feature_toggle.controller.host.environment.list</default>
    </route>

    <route id="nusje2000_feature_toggle_api_host_environment_view" path="/{name}" methods="GET,HEAD">
        <default key="_controller">nusje2000_feature_toggle.controller.host.environment.view</default>
    </route>

    <route id="nusje2000_feature_toggle_api_host_environment_create" path="/create-environment" methods="POST">
        <default key="_controller">nusje2000_feature_toggle.controller.host.environment.create</default>
    </route>

    <route id="nusje2000_feature_toggle_api_host_feature_view" path="/{environment}/{name}" methods="GET,HEAD">
        <default key="_controller">nusje2000_feature_toggle.controller.host.feature.view</default>
    </route>

    <route id="nusje2000_feature_toggle_api_host_feature_create" path="/{environment}/create-feature" methods="POST">
        <default key="_controller">nusje2000_feature_toggle.controller.host.feature.create</default>
    </route>

    <route id="nusje2000_feature_toggle_api_host_feature_update" path="/{environment}/{name}" methods="PATCH">
        <default key="_controller">nusje2000_feature_toggle.controller.host.feature.update</default>
    </route>

    <route id="nusje2000_feature_toggle_api_host_feature_delete" path="/{environment}/{name}" methods="DELETE">
        <default key="_controller">nusje2000_feature_toggle.controller.host.feature.delete</default>
    </route>
</routes>
